{
  "version": 1,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "file": {
        "class": "logging.FileHandler",
        "level": "INFO",
        "formatter": "simple",
        "filename": "$RVASC_LOG_FILE"
    }
  },
  "loggers": {
    "root": {
      "level": "INFO",
      "handlers": ["file"]
    },
    "rvasc": {
      "level": "INFO",
      "propagate": 0,
      "handlers": ["file"]
    },
    "uvicorn.access": {
      "level": "INFO",
      "propagate": 0,
      "handlers": ["file"]
    }
  }
}